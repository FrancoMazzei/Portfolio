.herramientas {
    grid-column: 2 / span 1; 
    position: relative;
	text-align: center;
	top: -180px;
	height: auto;
}

.grid-imagenes {
    display: grid;
    grid-template-columns: repeat(3, 120px);  
	margin-left: 25%; 
	margin-top: 25px;
}

.imagen.herra {
    width: 80px; 
    height: auto; 
}
.imagen.herra:hover {}



.herramientas2 {
    grid-column: 2 / span 1; 
    position: relative;
    text-align: center;
    top: -180px;
}

.grid-imagenes2 {
    display: grid;
    grid-template-columns: repeat(2, 120px); 
	margin-left: 35%; 
}

.imagen2.herra2 {
    width: 80px; 
    height: auto; 
}


.imagen.herra,
.imagen2.herra2 {
    width: 80px;
    height: auto;
    transition: transform 0.3s ease; 
}

.imagen.herra:hover,
.imagen2.herra2:hover {
    transform: scale(1.5); 
}


	
